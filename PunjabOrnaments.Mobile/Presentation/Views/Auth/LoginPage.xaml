<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Punjab_Ornaments.Presentation.Views.Auth.LoginPage"
             xmlns:viewmodel="clr-namespace:Punjab_Ornaments.Presentation.Viewmodels.Auth"
             x:DataType="viewmodel:LoginPageViewModel"
             Title="LoginPage">
    <Grid BackgroundColor="LightGray">
        <Frame Margin="250" >
            <VerticalStackLayout Padding="10" Spacing="5">
                <Label Text="Welcome" HorizontalOptions="Center" FontSize="Title"/>
                <Label Text="User Name"/>
                <Entry Text="{Binding UserName}"/>
                <Label Text="Password"/>
                <Entry Text="{Binding Password}" IsPassword="True"/>
                <Button Text="Login" Command="{Binding LoginCommand}" Margin="25"/>
                <Picker>
                    <Picker.item
                </Picker>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>