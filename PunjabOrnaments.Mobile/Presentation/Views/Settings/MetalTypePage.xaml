<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Punjab_Ornaments.Presentation.Viewmodels.Settings"
             xmlns:approvaltempate="clr-namespace:Punjab_Ornaments.Presentation.Views.Settings.Templates"
             x:DataType="viewmodel:MetalTypePageViewModel"
             x:Class="Punjab_Ornaments.Presentation.Views.Settings.MetalTypePage"
             Title="MetalTypePage">
    <Grid>
        <CollectionView ItemsSource="{Binding MetalTypeList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <approvaltempate:MetalTypeTemplate/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Add" Command="{Binding NavigateAddMetaltypePageCommnad}" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"/>
    </Grid>
</ContentPage>