<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Punjab_Ornaments.Presentation.Views.Purchase.AddPurchase"
             xmlns:viewmodel="clr-namespace:Punjab_Ornaments.Presentation.Viewmodels.Purchase"
             xmlns:model="clr-namespace:Punjab_Ornaments.Models.Stock"
             x:DataType="viewmodel:AddPurchaseViewModel"
             Title="AddPurchase">
    <ScrollView>
        <VerticalStackLayout x:DataType="model:Purchase">
            <Grid ColumnDefinitions="*,*">
                <Label Text="Matel Type" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Picker Title="Matel Type" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="White">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Gold</x:String>
                            <x:String>Silver</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="ItemType" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Picker Title="Matel Type" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="White">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>LR</x:String>
                            <x:String>TP</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Brand" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding Brand}" Placeholder="Brand" Grid.Column="1" />
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Manufacture Id" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding ManufactureId}" Placeholder="ManufactureId" Grid.Column="1" />
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Manufacture Name" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding ManufactureName}" Placeholder="ManufactureName" Grid.Column="1" />
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Weight" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Grid Grid.Column="1" BindingContext="{Binding Weight}">
                    <Entry Text="{Binding Weight.GrossWeight}" Placeholder="GrossWeight"/>
                    <Entry Text="{Binding Weight.LessWeight}" Placeholder="LessWeight" />
                    <Label Text="{Binding Weight.NetWeight}"/>
                </Grid>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Quantity" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding Quantity}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Rate" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding Rate}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Wastage" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding Wastage}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Labour" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Entry Text="{Binding Labour}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>