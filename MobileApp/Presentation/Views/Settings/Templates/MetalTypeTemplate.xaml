<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Punjab_Ornaments.Presentation.Viewmodels.Settings"
             xmlns:model="clr-namespace:Punjab_Ornaments.Models.AdminPannel"
             x:Class="Punjab_Ornaments.Presentation.Views.Settings.Templates.MetalTypeTemplate">
    <Frame x:DataType="viewmodel:MetalTypePageViewModel">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding Path=Parent.Parent.BindingContext.NavigateToPurchaseDetailPageCommnad, Source={x:Reference Name=PurchasetemplateView}}"
                Command="{Binding Source={x:Reference path.Parent.Parent.MetalTypeTemplate}, Path=NavigateAddMetaltypePageCommnad}"
            CommandParameter="{Binding Source={x:Reference idlabel},Path=Text}"/>
        </Frame.GestureRecognizers>
        <HorizontalStackLayout x:DataType="model:MetelType">
            <Label x:Name="idlabel" Text="{Binding Id}"/>
            <Label Text="{Binding MetelName}"/>
        </HorizontalStackLayout>
    </Frame>
</ContentView>